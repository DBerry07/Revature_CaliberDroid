<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/btn_manage_batch_create_batch"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="@string/btn_manage_batch_create_batch"
        app:icon="@drawable/ic_add"
        app:iconGravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manage_batches_number_label">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_manage_batches"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/manage_batches_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/manageBatch_noOfBatches"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_manageBatches" />

    <TextView
        android:id="@+id/tv_manage_batches_no_of_batches_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/manage_batches_number_label"
        app:layout_constraintStart_toEndOf="@+id/manage_batches_number_label"
        app:layout_constraintTop_toTopOf="@+id/manage_batches_number_label" />

    <Spinner
        android:id="@+id/spinner_manageBatches"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="64dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/btn_manage_batch_create_batch"
        app:layout_constraintEnd_toStartOf="@+id/btn_manage_batch_create_batch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_manage_batch_create_batch" />

</androidx.constraintlayout.widget.ConstraintLayout>





