<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="assessWeekNotes"
            type="com.revature.caliberdroid.data.model.AssessWeekNotes" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_assessweekrecycler_weeknumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{@string/week_number(assessWeekNotes.weekNumber)}"
                android:textSize="@dimen/card_title_font_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_assessweek_averagelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/weekly_batch_average_label"
                app:layout_constraintStart_toStartOf="@+id/tv_assessweekrecycler_weeknumber"
                app:layout_constraintTop_toBottomOf="@+id/tv_assessweekrecycler_weeknumber" />

            <TextView
                android:id="@+id/tv_assessweekselection_average"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@{@string/grade_format(assessWeekNotes.batchAverage)}"
                app:layout_constraintBottom_toBottomOf="@+id/tv_assessweek_averagelabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_assessweek_averagelabel" />

            <TextView
                android:id="@+id/tv_assessweekrecycler_noteslabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/batch_notes_label"
                app:layout_constraintStart_toStartOf="@+id/tv_assessweek_averagelabel"
                app:layout_constraintTop_toBottomOf="@+id/tv_assessweek_averagelabel" />

            <TextView
                android:id="@+id/tv_assessweekrecycler_notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{assessWeekNotes.notes}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="@+id/tv_assessweekrecycler_noteslabel"
                app:layout_constraintTop_toBottomOf="@id/tv_assessweekrecycler_noteslabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>