<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <!-- Intended to look like the button in fragment_batches.xml -->
    <Button
        android:id="@+id/MB_btn_goto_add_trainee"
        style="@style/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="12dp"
        android:drawableEnd="@drawable/create_batch_icon"
        android:padding="0dp"
        android:paddingStart="12dp"
        android:text="ADD TRAINEE"
        android:drawablePadding="-5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right|end"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvActiveTrainees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Trainees Only"
            />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swtActiveTrainees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:thumbTint="@color/trainee_switch_active_status"
            app:trackTint="@color/trainee_switch_track_active_status"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/TM_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>