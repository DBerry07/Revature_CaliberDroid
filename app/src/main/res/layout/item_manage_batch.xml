<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="batchModel"
            type="com.revature.caliberdroid.data.model.Batch" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_batch_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/textview_border"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        app:cardPreventCornerOverlap="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_batch_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_batch_row_name_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:text="@string/batch_row_batch_name_header"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_batch_row_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@{batchModel.TrainingName}"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_batch_row_name_header"
                app:layout_constraintStart_toEndOf="@+id/tv_batch_row_name_header"
                app:layout_constraintTop_toTopOf="@+id/tv_batch_row_name_header" />

            <TextView
                android:id="@+id/tv_batch_row_skill_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/createBatch_skillHeader"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="@+id/tv_batch_row_name_header"
                app:layout_constraintTop_toBottomOf="@+id/tv_batch_row_name_header" />

            <TextView
                android:id="@+id/tv_batch_row_skill_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@{batchModel.skillType}"
                android:textColor="#656565"
                app:layout_constraintBottom_toBottomOf="@+id/tv_batch_row_skill_header"
                app:layout_constraintStart_toEndOf="@+id/tv_batch_row_skill_header"
                app:layout_constraintTop_toTopOf="@+id/tv_batch_row_skill_header" />

            <TextView
                android:id="@+id/tv_batch_row_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@{batchModel.dates}"
                android:textColor="#656565"
                app:layout_constraintBottom_toBottomOf="@+id/tv_batch_row_start_date_header"
                app:layout_constraintStart_toEndOf="@+id/tv_batch_row_start_date_header"
                app:layout_constraintTop_toTopOf="@+id/tv_batch_row_start_date_header" />

            <TextView
                android:id="@+id/tv_batchrow_trainer_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@{batchModel.trainerName}"
                android:textColor="#656565"
                app:layout_constraintStart_toEndOf="@+id/tv_batchrow_trainer"
                app:layout_constraintTop_toTopOf="@+id/tv_batchrow_trainer" />

            <TextView
                android:id="@+id/tv_batch_row_start_date_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/batchRow_datesHeader"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="@+id/tv_batch_row_skill_header"
                app:layout_constraintTop_toBottomOf="@+id/tv_batch_row_skill_header" />

            <TextView
                android:id="@+id/tv_batchrow_trainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/batchrow_trainerheader"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="@+id/tv_batch_row_start_date_header"
                app:layout_constraintTop_toBottomOf="@+id/tv_batch_row_start_date_header" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_batchrow_expandable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_batchrow_trainer">

                <TextView
                    android:id="@+id/tv_batchrow_cotrainer_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{batchModel.coTrainerName}"
                    android:textColor="#656565"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_batchrow_cotrainer"
                    app:layout_constraintStart_toEndOf="@+id/tv_batchrow_cotrainer"
                    app:layout_constraintTop_toTopOf="@+id/tv_batchrow_cotrainer" />

                <TextView
                    android:id="@+id/tv_batchrow_goodgrade_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{Integer.toString(batchModel.goodGrade)}"
                    android:textColor="#656565"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_batchrow_goodgrade"
                    app:layout_constraintStart_toEndOf="@+id/tv_batchrow_goodgrade"
                    app:layout_constraintTop_toTopOf="@+id/tv_batchrow_goodgrade" />

                <TextView
                    android:id="@+id/tv_batchrow_passinggrade_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{Integer.toString(batchModel.passingGrade)}"
                    android:textColor="#656565"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_batchrow_passinggrade"
                    app:layout_constraintStart_toEndOf="@+id/tv_batchrow_passinggrade"
                    app:layout_constraintTop_toTopOf="@+id/tv_batchrow_passinggrade" />

                <TextView
                    android:id="@+id/tv_batch_row_trainingtype_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{batchModel.trainingType}"
                    android:textColor="#656565"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_batch_row_trainingtype_header"
                    app:layout_constraintStart_toEndOf="@+id/tv_batch_row_trainingtype_header"
                    app:layout_constraintTop_toTopOf="@+id/tv_batch_row_trainingtype_header" />

                <TextView
                    android:id="@+id/tv_sub_item_batch_row_location_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="@{batchModel.location}"
                    android:textColor="#656565"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_batch_row_location_header"
                    app:layout_constraintTop_toTopOf="@+id/tv_batch_row_location_header" />

                <TextView
                    android:id="@+id/tv_batchrow_cotrainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/batchrow_cotrainerheader"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_batchrow_goodgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/batchrow_goodgrade_header"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintStart_toStartOf="@+id/tv_batchrow_cotrainer"
                    app:layout_constraintTop_toBottomOf="@+id/tv_batchrow_cotrainer" />

                <TextView
                    android:id="@+id/tv_batchrow_passinggrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/batchrow_passinggrade_header"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintStart_toStartOf="@+id/tv_batchrow_goodgrade"
                    app:layout_constraintTop_toBottomOf="@+id/tv_batchrow_goodgrade" />

                <TextView
                    android:id="@+id/tv_batch_row_trainingtype_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/createBatch_trainingTypeHeader"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintStart_toStartOf="@+id/tv_batchrow_passinggrade"
                    app:layout_constraintTop_toBottomOf="@+id/tv_batchrow_passinggrade" />

                <TextView
                    android:id="@+id/tv_batch_row_location_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/createBatch_locationHeader"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintStart_toStartOf="@+id/tv_batch_row_trainingtype_header"
                    app:layout_constraintTop_toBottomOf="@+id/tv_batch_row_trainingtype_header" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/btn_edit_batch"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_delete_batch"
                app:layout_constraintEnd_toStartOf="@+id/btn_delete_batch"
                app:layout_constraintTop_toTopOf="@+id/btn_delete_batch"
                app:srcCompat="@drawable/ic_edit_orange"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/btn_delete_batch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:padding="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_delete_red"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/btn_view_associates"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_edit_batch"
                app:layout_constraintEnd_toStartOf="@+id/btn_edit_batch"
                app:layout_constraintTop_toTopOf="@+id/btn_edit_batch"
                app:srcCompat="@drawable/people_icon"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/batchrow_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/batchrow_expand_arrow_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_expand_arrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>