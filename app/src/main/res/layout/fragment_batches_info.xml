<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="batchModel"
            type="com.revature.caliberdroid.data.model.Batch" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_batch_info_location_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_border"
        android:clickable="false"
        android:fontFamily="sans-serif"
        android:inputType="none"
        android:paddingStart="4dp"
        android:text="@{batchModel.location}"
        android:textColor="@color/grey_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_location"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_batch_info_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/batch_info_header_end_date"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_skill_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_skill_value" />

    <TextView
        android:id="@+id/tv_batch_info_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/batch_info_header_start_date"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_location_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_name_trainer_value" />

    <TextView
        android:id="@+id/tv_batch_info_trainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/batch_info_header_trainer_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_name" />

    <TextView
        android:id="@+id/tv_batch_info_name_trainer_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_border"
        android:clickable="false"
        android:fontFamily="sans-serif"
        android:inputType="none"
        android:paddingStart="4dp"
        android:text="@{batchModel.trainerName}"
        android:textColor="@color/grey_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_batch_info_skill_value"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_trainer"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_trainer"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_batch_info_skill_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_border"
        android:clickable="false"
        android:fontFamily="sans-serif"
        android:inputType="none"
        android:paddingStart="4dp"
        android:text="@{batchModel.skillType}"
        android:textColor="@color/grey_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_batch_info_name_trainer_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_skill"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_create_batch_passing_grade_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_border"
        android:clickable="false"
        android:fontFamily="sans-serif"
        android:paddingStart="4dp"
        android:text="@{Integer.toString(batchModel.passingGrade)}"
        android:textColor="@color/grey_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_passing_grade"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_passing_grade"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_batch_info_passing_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/batch_info_heading_passing_grade"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_end_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_end_value" />

    <TextView
        android:id="@+id/tv_batch_info_good_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/batch_info_heading_good_grade"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_start_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_start_value" />

    <TextView
        android:id="@+id/tv_batch_info_cotrainer_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/batch_info_co_trainer_heading"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_good_grade_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_good_grade_value" />

    <TextView
        android:id="@+id/tv_batch_info_training_type_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/batch_info_training_type_heading"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_create_batch_passing_grade_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_create_batch_passing_grade_value" />

    <TextView
        android:id="@+id/tv_batch_info_end_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_border"
        android:clickable="false"
        android:fontFamily="sans-serif"
        android:paddingStart="4dp"
        android:text="@{Long.toString(batchModel.endDate)}"
        android:textColor="@color/grey_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_end"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_end"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_batch_info_start_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:background="@drawable/textview_border"
        android:clickable="false"
        android:fontFamily="sans-serif"
        android:paddingStart="4dp"
        android:text="@{Long.toString(batchModel.startDate)}"
        android:textColor="@color/grey_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_batch_info_end_value"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_start"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_batch_info_good_grade_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:background="@drawable/textview_border"
        android:clickable="false"
        android:fontFamily="sans-serif"
        android:paddingStart="4dp"
        android:text="@{Integer.toString(batchModel.goodGrade)}"
        android:textColor="@color/grey_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_create_batch_passing_grade_value"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_good_grade"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_good_grade"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_batch_info_cotrainer_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:background="@drawable/textview_border"
        android:clickable="false"
        android:fontFamily="sans-serif"
        android:paddingStart="4dp"
        android:text="@{batchModel.coTrainerName}"
        android:textColor="@color/grey_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_create_batch_passing_grade_value"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_good_grade"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_cotrainer_header"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_create_batch_training_type_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_border"
        android:clickable="false"
        android:fontFamily="sans-serif"
        android:paddingStart="4dp"
        android:text="@{batchModel.trainingType}"
        android:textColor="@color/grey_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_passing_grade"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_training_type_header"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_batch_info_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/batch_info_heading_skill"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_skill_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_name" />

    <TextView
        android:id="@+id/tv_batch_info_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/batch_info_heading_location"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_batch_info_name_trainer_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_batch_info_cotrainer_value" />

    <TextView
        android:id="@+id/tv_batch_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@{batchModel.trainingName}"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_batch_info_view" />

    <Button
        android:id="@+id/btn_batch_info_edit"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/edit_icon"
        app:layout_constraintEnd_toStartOf="@+id/btn_batch_info_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_batch_info_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/trash_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_batch_info_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/view_icon"
        app:layout_constraintEnd_toStartOf="@+id/btn_batch_info_edit"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>