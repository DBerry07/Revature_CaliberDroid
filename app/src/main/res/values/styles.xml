<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AddTraineeCard" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">15dp</item>
    </style>

    <style name="importantHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="somewhatImportantHeader">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="littleImportanceHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="veryLittleImportantHeader">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="lessImportantHeader">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="traineeDetailsHeaderLeft">
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="traineeDetailsHeaderRight">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">13sp</item>
    </style>


</resources>
