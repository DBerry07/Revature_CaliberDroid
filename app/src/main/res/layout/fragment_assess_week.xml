<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="assessWeekViewModel"
            type="com.revature.caliberdroid.ui.assessbatch.assessweekview.AssessWeekViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.assessbatch.assessweekview.AssessWeekFragment">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_weekview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/tabs_weekview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.viewpager.widget.ViewPager>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_weekview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_weekview_assessments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_assessments" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_weekview_trainees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_trainees" />

        </com.google.android.material.tabs.TabLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>