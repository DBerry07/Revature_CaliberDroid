<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    ThemeOverlay.AppCompat.Dark.ActionBar-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!--    ThemeOverlay.AppCompat.Light-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!--    Theme.AppCompat.Light.DarkActionBar-->
    <style name="materialDesignContainer" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:padding">10dp</item>
        <item name="backgroundColor">@color/grey_dark</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxStrokeColor">?attr/colorOnSurface</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <style name="materialDesignContainerWithHelperText" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:padding">10dp</item>
        <item name="backgroundColor">@color/grey_dark</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxStrokeColor">?attr/colorOnSurface</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>

        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="helperTextTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="materialDesignText">
        <item name="android:text">@string/empty</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="traineeCard">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">10dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
    </style>


    <style name="importantHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="somewhatImportantHeader">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="littleImportanceHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="veryLittleImportantHeader">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="lessImportantHeader">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="traineeDetailsHeaderLeft">
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="traineeDetailsHeaderRight">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- SETTINGS -->

    <style name="addBtn" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@drawable/background_btn</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="addBtnWithPlusImg" parent="addBtn">
        <item name="drawableEndCompat">@drawable/ic_add_orange</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="settingsFragmentContentWrapper">
        <item name="android:padding">6dp</item>
    </style>

    <style name="settingsCard">
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="settingsCardContentWrapper">
        <item name="android:padding">16dp</item>
    </style>

    <style name="settingsHeaderWrapper">
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="settingsRecyclerView">
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="settingsHeading">
        <item name="android:padding">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="settingsFieldHeading">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="settingsField">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="settingsFieldEditText" parent="settingsField">
        <item name="android:background">@drawable/background_black_border</item>
        <item name="android:minHeight">15dp</item>
    </style>

    <style name="settingsDialogHeader">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="settingsDialogFieldLabel">
    </style>

    <style name="settingsDialogFieldEditText">
            <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="settingsMaterialEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="activeCircle">
        <item name="android:background">@drawable/background_active_status</item>
        <item name="android:gravity">center</item>
<!--        <item name="srcCompat">@drawable/ic_active_green</item>-->
    </style>

    <style name="inActiveCircle">
        <item name="android:background">@drawable/background_inactive_status</item>
        <item name="android:gravity">center</item>
<!--        <item name="srcCompat">@drawable/ic_inactive_red</item>-->
    </style>

    <style name="editIcon">
        <item name="android:gravity">center</item>
        <item name="srcCompat">@drawable/ic_edit_orange</item>
    </style>

    <style name="deleteIcon">
        <item name="android:gravity">center</item>
        <item name="srcCompat">@drawable/ic_delete_red</item>
    </style>


    <style name="switchTraineeTextView">
        <item name="android:padding">6dp</item>
    </style>

    <style name="link_text">
        <item name="android:background">@drawable/link_bottom_border</item>
        <item name="android:textColor">@color/link_color</item>
    </style>

    <style name="warningText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red_flag</item>
    </style>

<!--    assess batch styles -->
    <style name="assessBatchTraineeName">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/grey_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>
</resources>
