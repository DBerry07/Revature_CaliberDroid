<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            style="@style/AddTraineeCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_first_name"
                    style="@style/settingsFieldHeading"
                    />

                <EditText
                    android:id="@+id/trainee_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_first_name"
                    android:inputType="textPersonName"
                    style="@style/settingsFieldEditText"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_last_name"
                    style="@style/settingsFieldHeading"
                    />

                <EditText
                    android:id="@+id/trainee_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_last_name"
                    android:inputType="textPersonName"
                    style="@style/settingsFieldEditText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_email"
                    style="@style/settingsFieldHeading"/>

                <EditText
                    android:id="@+id/trainee_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_email"
                    android:inputType="textEmailAddress"
                    style="@style/settingsFieldEditText"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_phone"
                    style="@style/settingsFieldHeading"/>

                <EditText
                    android:id="@+id/trainee_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_phone"
                    android:inputType="phone"
                    style="@style/settingsFieldEditText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_status"
                    style="@style/settingsFieldHeading"
                    />

                <Spinner
                    android:id="@+id/trainee_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:entries="@array/TraineeStatus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_college"
                    style="@style/settingsFieldHeading"/>

                <EditText
                    android:id="@+id/trainee_college"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_college"
                    android:inputType="textPersonName"
                    style="@style/settingsFieldEditText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_degree"
                    style="@style/settingsFieldHeading"/>

                <EditText
                    android:id="@+id/trainee_degree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_degree"
                    android:inputType="textPersonName"
                    style="@style/settingsFieldEditText"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_major"
                    style="@style/settingsFieldHeading"/>

                <EditText
                    android:id="@+id/trainee_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_major"
                    android:inputType="textPersonName"
                    style="@style/settingsFieldEditText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_optional_profile"
                    style="@style/settingsFieldHeading"
                    />

                <EditText
                    android:id="@+id/trainee_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_optional_profile"
                    android:inputType="textPersonName"
                    style="@style/settingsFieldEditText"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_optional_skype"
                    style="@style/settingsFieldHeading"/>

                <EditText
                    android:id="@+id/trainee_skype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_optional_skype"
                    android:inputType="textPersonName"
                    style="@style/settingsFieldEditText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_optional_recruiter"
                    style="@style/settingsFieldHeading"
                    />

                <EditText
                    android:id="@+id/trainee_recruiter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_optional_recruiter"
                    android:inputType="textPersonName"
                    style="@style/settingsFieldEditText"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_optional_screener"
                    style="@style/settingsFieldHeading"
                    />

                <EditText
                    android:id="@+id/trainee_screener"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_optional_screener"
                    android:inputType="textPersonName"
                    style="@style/settingsFieldEditText"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trainee_optional_project"
                    style="@style/settingsFieldHeading"/>

                <EditText
                    android:id="@+id/trainee_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trainee_optional_project"
                    android:inputType="textPersonName"
                    style="@style/settingsFieldEditText"/>

            </LinearLayout>

            <Button
                android:id="@+id/TM_btn_create_trainee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Trainee" />

    </LinearLayout>

</ScrollView>