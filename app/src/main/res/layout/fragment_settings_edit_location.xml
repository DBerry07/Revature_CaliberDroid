<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/settingsFragmentContentWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <include
                android:id="@+id/inLocationFields"
                layout="@layout/include_location_fields" />

            <ImageView
                android:id="@+id/imgLoadingIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                style="@style/settingsLoadingIcon"
                android:visibility="gone"
                app:srcCompat="@drawable/anim_orange_progress" />

            <Button
                android:id="@+id/btnEditLocation"
                style="@style/addBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|right"
                android:text="@string/btn_confirm" />


        </LinearLayout>
    </ScrollView>
</layout>