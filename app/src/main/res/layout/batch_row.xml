<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="batchModel"
            type="com.revature.caliberdroid.data.model.Batch" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_batch_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/textview_border"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        app:cardPreventCornerOverlap="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_room_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tv_batch_row_name_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Batch Name: "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_batch_row_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Mobile-Android"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_batch_row_name_header"
                app:layout_constraintStart_toEndOf="@+id/tv_batch_row_name_header"
                app:layout_constraintTop_toTopOf="@+id/tv_batch_row_name_header" />

            <TextView
                android:id="@+id/tv_batch_row_skill_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Skill Focus:"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_batch_row_name_header" />

            <TextView
                android:id="@+id/tv_batch_row_skill_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@{batchModel.skillType}"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@+id/tv_batch_row_skill_header"
                app:layout_constraintStart_toEndOf="@+id/tv_batch_row_skill_header"
                app:layout_constraintTop_toTopOf="@+id/tv_batch_row_skill_header" />

            <TextView
                android:id="@+id/tv_batch_row_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@{Long.toString(batchModel.startDate)}"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@+id/tv_batch_row_start_date_header"
                app:layout_constraintStart_toEndOf="@+id/tv_batch_row_start_date_header"
                app:layout_constraintTop_toTopOf="@+id/tv_batch_row_start_date_header" />

            <TextView
                android:id="@+id/tv_batch_row_location_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@{batchModel.location}"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@+id/tv_batch_row_location_header"
                app:layout_constraintStart_toEndOf="@+id/tv_batch_row_location_header"
                app:layout_constraintTop_toTopOf="@+id/tv_batch_row_location_header" />

            <TextView
                android:id="@+id/tv_batch_row_start_date_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Start Date:"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="@+id/tv_batch_row_skill_header"
                app:layout_constraintTop_toBottomOf="@+id/tv_batch_row_skill_header" />

            <TextView
                android:id="@+id/tv_batch_row_location_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Location:"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="@+id/tv_batch_row_start_date_header"
                app:layout_constraintTop_toBottomOf="@+id/tv_batch_row_start_date_header" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>