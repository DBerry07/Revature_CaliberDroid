<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.revature.caliberdroid.util.AuditStatusConverter" />

        <variable
            name="weekLiveData"
            type="com.revature.caliberdroid.ui.qualityaudit.weekselection.WeekLiveData" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_auditweek_weeknumber"
                style="@style/globalCardHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/week_number(weekLiveData.weekNumber)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_auditweek_overall_label"
                style="@style/globalCardRowLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/overall_qc_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_auditweek_weeknumber" />

            <ImageView
                android:id="@+id/img_itemauditweek_overallstatus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:imageResource="@{AuditStatusConverter.INSTANCE.getImageResourceID(weekLiveData.overallStatus)}"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/tv_auditweek_overall_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_auditweek_weeknumber" />

            <TextView
                android:id="@+id/textView6"
                style="@style/globalCardRowLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{@string/overall_qc_feedback(weekLiveData.weekNumber)}"
                app:layout_constraintStart_toStartOf="@+id/tv_auditweek_overall_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_auditweek_overall_label" />

            <TextView
                android:id="@+id/tv_auditweek_overall_notes"
                style="@style/globalCardRowText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@{@string/overall_qc_feedback_hint(weekLiveData.weekNumber)}"
                android:text="@{weekLiveData.overallNotes}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>