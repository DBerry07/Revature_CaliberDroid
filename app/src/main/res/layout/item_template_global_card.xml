<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_batch_row"
        style="@style/globalCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_batch_row"
            style="@style/globalCardConstraintWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<!-- Heading -->
            <TextView
                android:id="@+id/cardHeaderLabel"
                style="@style/globalCardHeaderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Label: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardHeaderText"
                style="@style/globalCardHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                app:layout_constraintBaseline_toBaselineOf="@+id/cardHeaderLabel"
                app:layout_constraintStart_toEndOf="@+id/cardHeaderLabel" />

<!--Container of visible rows-->
            <LinearLayout
                android:id="@+id/visibleRows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/cardHeaderLabel"
                app:layout_constraintTop_toBottomOf="@+id/cardHeaderText"
                style="@style/globalCardRowWrapper">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRowLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Label: "
                        style="globalCardRowLabel"/>

                    <TextView
                        android:id="@+id/tvRowText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Text"
                        style="globalCardRowText"/>
                </LinearLayout>
            </LinearLayout>

<!--Container of expandable rows-->
            <LinearLayout
                android:id="@+id/expandableRows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/cardHeaderLabel"
                app:layout_constraintTop_toBottomOf="@+id/visibleRows"
                style="@style/globalCardRowWrapper">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Label: "
                        style="globalCardRowLabel"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Text"
                        style="globalCardRowText"/>

                </LinearLayout>
            </LinearLayout>
            <!-- RIGHT ICONS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/btn_delete_batch"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/ic_delete_red" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgExpandIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/ic_expand_arrow" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</merge>